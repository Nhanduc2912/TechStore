@model TechStore.Models.ThuongHieu
@{
    ViewData["Title"] = "Cập nhật thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Cập nhật thương hiệu</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.MaTh" enctype="multipart/form-data">
                    <input type="hidden" asp-for="MaTh" />
                    <input type="hidden" asp-for="Logo" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <div class="mb-3">
                        <label asp-for="TenTh" class="form-label fw-bold">Tên thương hiệu <span class="text-danger">*</span></label>
                        <input asp-for="TenTh" class="form-control" required />
                        <span asp-validation-for="TenTh" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="QuocGia" class="form-label fw-bold">Quốc gia</label>
                        <input asp-for="QuocGia" class="form-control" />
                        <span asp-validation-for="QuocGia" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Thay đổi Logo</label>
                        <input type="file" name="logo" class="form-control" accept="image/*" onchange="previewImage(this)">
                        <small class="text-muted">Bỏ qua nếu không muốn thay đổi logo hiện tại.</small>
                    </div>

                    <div class="text-center mb-3 bg-light p-3 rounded">
                        <label class="d-block small text-muted mb-2">Logo hiện tại</label>
                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <img id="imgPreview" src="~/Hinh/ThuongHieu/@Model.Logo" class="img-fluid" style="max-height: 100px;" onerror="this.src='https://placehold.co/200x100?text=Lỗi+Ảnh'">
                        }
                        else
                        {
                            <img id="imgPreview" src="https://placehold.co/200x100?text=Chưa+có+Logo" class="img-fluid" style="max-height: 100px;">
                        }
                    </div>

                    <div class="d-flex gap-2 border-top pt-3">
                        <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save me-2"></i>Lưu thay đổi</button>
                        <a href="/Admin/ThuongHieu" class="btn btn-secondary px-4">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#imgPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}