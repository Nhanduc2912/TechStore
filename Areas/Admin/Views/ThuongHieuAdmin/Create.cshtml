@model TechStore.Models.ThuongHieu
@{
    ViewData["Title"] = "Thêm thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h1><i class="bi bi-award me-2"></i>Thêm thương hiệu mới</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Store" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <div class="mb-3">
                        <label asp-for="TenTh" class="form-label fw-bold">Tên thương hiệu <span class="text-danger">*</span></label>
                        <input asp-for="TenTh" class="form-control" required placeholder="Ví dụ: ASUS, Apple..." />
                        <span asp-validation-for="TenTh" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="QuocGia" class="form-label fw-bold">Quốc gia</label>
                        <input asp-for="QuocGia" class="form-control" placeholder="Ví dụ: Taiwan, USA..." />
                        <span asp-validation-for="QuocGia" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Logo thương hiệu</label>
                        <input type="file" name="logo" class="form-control" accept="image/*" onchange="previewImage(this)">
                        <small class="text-muted">Định dạng: PNG, JPG (Nên dùng ảnh nền trong suốt)</small>
                    </div>

                    <div class="text-center mb-3 p-3 bg-light rounded">
                        <img id="imgPreview" src="https://placehold.co/200x100?text=Logo+Preview" class="img-fluid" style="max-height: 100px;">
                    </div>

                    <div class="d-flex gap-2 border-top pt-3">
                        <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save me-2"></i>Lưu lại</button>
                        <a href="/Admin/ThuongHieu" class="btn btn-secondary px-4">Hủy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#imgPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}