@model IEnumerable<TechStore.ViewModels.BaoCaoSanPhamVM>
@{
    ViewData["Title"] = "Top sản phẩm bán chạy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="fw-bold text-primary mb-4"><i class="bi bi-trophy"></i> Top Sản Phẩm Bán Chạy</h2>

<div class="row mb-4">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 h-100">
             <div class="card-header bg-white py-3">
                <h5 class="mb-0 fw-bold">Biểu đồ số lượng bán</h5>
            </div>
            <div class="card-body">
                <canvas id="productChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card bg-warning text-dark border-0 shadow-sm h-100">
            <div class="card-body d-flex flex-column justify-content-center text-center">
                <h3>Sản phẩm Top 1</h3>
                @if(Model.Any()) {
                    var top1 = Model.First();
                    <h1 class="display-4 fw-bold">@top1.SoLuong</h1>
                    <p class="fs-5">@top1.TenHh</p>
                    <small>Doanh thu: @top1.DoanhThu.ToString("#,##0")₫</small>
                }
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Top</th>
                    <th>Tên sản phẩm</th>
                    <th class="text-center">Số lượng bán</th>
                    <th class="text-center">Số lần mua</th>
                    <th class="text-end pe-4">Doanh thu</th>
                </tr>
            </thead>
            <tbody>
                @{ int i = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold ps-3"><span class="badge bg-secondary rounded-pill">@i</span></td>
                        <td>@item.TenHh</td>
                        <td class="text-center fw-bold text-primary">@item.SoLuong</td>
                        <td class="text-center">@item.LanMua</td>
                        <td class="text-end pe-4 fw-bold text-success">@item.DoanhThu.ToString("#,##0")₫</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('productChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(ViewBag.ChartLabels),
            datasets: [{
                label: 'Số lượng bán',
                data: @Html.Raw(ViewBag.ChartData),
                backgroundColor: 'rgba(54, 162, 235, 0.6)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        },
        options: {
            indexAxis: 'y', // Biểu đồ ngang cho dễ đọc tên SP
            responsive: true,
            scales: { x: { beginAtZero: true } }
        }
    });
</script>