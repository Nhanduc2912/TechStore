@model IEnumerable<TechStore.ViewModels.BaoCaoKhachHangVM>
@{
    ViewData["Title"] = "Báo cáo khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary"><i class="bi bi-people"></i> Khách hàng thân thiết (VIP)</h2>
    <button class="btn btn-success" onclick="window.print()"><i class="bi bi-printer"></i> In báo cáo</button>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th>Hạng</th>
                    <th>Khách hàng</th>
                    <th class="text-center">Tổng đơn hàng</th>
                    <th class="text-center">Đơn 30 ngày qua</th>
                    <th class="text-end pe-4">Tổng tiền đã mua</th>
                </tr>
            </thead>
            <tbody>
                @{ int rank = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3">
                            @if(rank == 1) { <i class="bi bi-trophy-fill text-warning fs-4"></i> }
                            else if(rank == 2) { <i class="bi bi-trophy-fill text-secondary fs-4"></i> }
                            else if(rank == 3) { <i class="bi bi-trophy-fill text-danger fs-4"></i> }
                            else { <span class="fw-bold ms-2">@rank</span> }
                        </td>
                        <td>
                            <div class="fw-bold">@item.HoTen</div>
                            <small class="text-muted">ID: @item.MaKh</small>
                        </td>
                        <td class="text-center">@item.TongDonHang</td>
                        <td class="text-center">
                            @if(item.LanMuaGanDay > 0) {
                                <span class="badge bg-success">@item.LanMuaGanDay</span>
                            } else {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td class="text-end pe-4 fw-bold text-danger">@item.TongTienMua.ToString("#,##0")₫</td>
                    </tr>
                    rank++;
                }
            </tbody>
        </table>
    </div>
</div>