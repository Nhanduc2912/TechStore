@model TechStore.Models.HoaDon
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.MaHd;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
    // Tính tổng tiền hàng (chưa gồm ship)
    var tongTienHang = Model.ChiTietHoaDons.Sum(c => c.DonGia * c.SoLuong);
}

<div class="page-header d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center">
        <a href="/Admin/DonHang" class="btn btn-outline-secondary me-3"><i class="bi bi-arrow-left"></i> Quay lại</a>
        <h3 class="mb-0 fw-bold">Đơn hàng #@Model.MaHd</h3>
        <span class="ms-3 badge @(Model.MaTrangThai switch { 0=>"bg-warning text-dark", 1=>"bg-info", 2=>"bg-primary", 3=>"bg-success", -1=>"bg-secondary", _=>"bg-light"}) fs-6">
            @(Model.MaTrangThaiNavigation?.TenTrangThai ?? "N/A")
        </span>
    </div>
    <div>
        <button class="btn btn-outline-primary me-2" onclick="window.print()"><i class="bi bi-printer"></i> In hóa đơn</button>
    </div>
</div>

<div class="row">
    <!-- CỘT TRÁI: THÔNG TIN & SẢN PHẨM -->
    <div class="col-md-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white fw-bold py-3">Danh sách sản phẩm</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th class="text-center">Đơn giá</th>
                                <th class="text-center">SL</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietHoaDons)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            @if(item.MaHhNavigation != null) {
                                                <img src="~/Hinh/HangHoa/@item.MaHhNavigation.HinhAnh" style="width: 50px; height: 50px; object-fit: contain;" class="border rounded me-3" onerror="this.src='https://placehold.co/50x50'">
                                                <div>
                                                    <div class="fw-bold">@item.MaHhNavigation.TenHh</div>
                                                    <small class="text-muted">Mã SP: #@item.MaHh</small>
                                                </div>
                                            } else {
                                                <span class="text-muted fst-italic">Sản phẩm đã bị xóa</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">@item.DonGia.ToString("#,##0")₫</td>
                                    <td class="text-center">x @item.SoLuong</td>
                                    <td class="text-end pe-4 fw-bold">@((item.DonGia * item.SoLuong).ToString("#,##0"))₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                            <tr>
                                <td colspan="3" class="text-end pe-4 pt-3">Tạm tính:</td>
                                <td class="text-end pe-4 pt-3 fw-bold">@tongTienHang.ToString("#,##0")₫</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end pe-4 border-0">Phí vận chuyển:</td>
                                <td class="text-end pe-4 border-0 fw-bold">@((Model.PhiVanChuyen ?? 0).ToString("#,##0"))₫</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end pe-4 border-0 fs-5 fw-bold text-danger">TỔNG CỘNG:</td>
                                <td class="text-end pe-4 border-0 fs-4 fw-bold text-danger">
                                    @((tongTienHang + (Model.PhiVanChuyen ?? 0)).ToString("#,##0"))₫
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- CỘT PHẢI: THÔNG TIN KHÁCH & XỬ LÝ -->
    <div class="col-md-4">
        <!-- Card Xử lý đơn hàng -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-primary text-white fw-bold py-3">
                <i class="bi bi-gear-fill me-2"></i> Xử lý đơn hàng
            </div>
            <div class="card-body">
                <label class="form-label fw-bold small text-muted">Cập nhật trạng thái:</label>
                <!-- Dropdown trạng thái -->
                <select id="statusSelect" class="form-select mb-3" asp-items="ViewBag.Statuses">
                </select>
                
                <button class="btn btn-primary w-100 fw-bold" onclick="updateStatus()">
                    Cập nhật trạng thái
                </button>
                
                <hr>
                
                <label class="form-label fw-bold small text-muted">Ghi chú nội bộ:</label>
                <textarea class="form-control mb-2 bg-light" rows="3" readonly>@Model.GhiChu</textarea>
            </div>
        </div>

        <!-- Card Thông tin khách hàng -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white fw-bold py-3">Thông tin giao hàng</div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="small text-muted d-block">Người nhận:</label>
                    <strong class="fs-5">@Model.HoTenNguoiNhan</strong>
                </div>
                <div class="mb-3">
                    <label class="small text-muted d-block">Số điện thoại:</label>
                    <a href="tel:@Model.SdtnguoiNhan" class="text-decoration-none fw-bold">@Model.SdtnguoiNhan</a>
                </div>
                <div class="mb-3">
                    <label class="small text-muted d-block">Địa chỉ:</label>
                    <span>@Model.DiaChiNguoiNhan</span>
                </div>
                <div class="mb-3">
                    <label class="small text-muted d-block">Ngày đặt hàng:</label>
                    <span>@Model.NgayDat?.ToString("dd/MM/yyyy HH:mm:ss")</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Chọn sẵn trạng thái hiện tại trong Dropdown khi trang vừa tải
        $(document).ready(function() {
            $('#statusSelect').val(@Model.MaTrangThai);
        });

        function updateStatus() {
            var newStatus = $('#statusSelect').val();
            if(confirm("Bạn có chắc muốn đổi trạng thái đơn hàng này không?")) {
                $.ajax({
                    // SỬA LỖI: Đường dẫn phải khớp chính xác với [Route("update-status")] trong Controller
                    url: '/admin/donhang/update-status', 
                    type: 'POST',
                    data: { id: @Model.MaHd, status: newStatus },
                    success: function(res) {
                        if(res.success) {
                            alert(res.message);
                            location.reload(); // Tải lại trang để thấy trạng thái mới
                        } else {
                            alert("Lỗi từ server: " + res.message);
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error(xhr.responseText);
                        alert("Lỗi kết nối server! Mã lỗi: " + xhr.status + ". Vui lòng kiểm tra Console (F12) để biết chi tiết.");
                    }
                });
            }
        }
    </script>
}