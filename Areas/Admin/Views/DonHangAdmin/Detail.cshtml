@model TechStore.Models.HoaDon
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.MaHd;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    
    var tongTienHang = Model.ChiTietHoaDons.Sum(c => c.DonGia * c.SoLuong);

    // --- LOGIC NGHIỆP VỤ ---
    int currentStatus = Model.MaTrangThai ?? 0;
    
    // Kiểm tra xem đơn hàng đã "đóng sổ" chưa (Hoàn thành hoặc Hủy)
    bool isFinalized = (currentStatus == 3 || currentStatus == -1);
}

<div class="page-header d-flex justify-content-between align-items-center mb-3">
    <div class="d-flex align-items-center">
        <a href="/admin/donhang" class="btn btn-outline-secondary me-3"><i class="fa-solid fa-arrow-left"></i> Quay lại</a>
        <h3 class="mb-0 fw-bold">Đơn hàng #@Model.MaHd</h3>
        <span class="ms-3 badge @(currentStatus switch { 0=>"bg-warning text-dark", 1=>"bg-info text-dark", 2=>"bg-primary", 3=>"bg-success", -1=>"bg-danger", _=>"bg-secondary"}) fs-6">
            @(Model.MaTrangThaiNavigation?.TenTrangThai ?? "N/A")
        </span>
    </div>
    <div>
        <button class="btn btn-outline-primary me-2" onclick="window.print()"><i class="fa-solid fa-print"></i> In hóa đơn</button>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white fw-bold py-3">Danh sách sản phẩm</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4">Sản phẩm</th>
                                <th class="text-center">Đơn giá</th>
                                <th class="text-center">SL</th>
                                <th class="text-end pe-4">Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietHoaDons)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            @if(item.MaHhNavigation != null) {
                                                <img src="~/Hinh/HangHoa/@item.MaHhNavigation.HinhAnh" style="width: 50px; height: 50px; object-fit: contain;" class="border rounded me-3" onerror="this.src='https://placehold.co/50x50'">
                                                <div>
                                                    <div class="fw-bold">@item.MaHhNavigation.TenHh</div>
                                                    <small class="text-muted">Mã SP: #@item.MaHh</small>
                                                </div>
                                            } else {
                                                <span class="text-muted fst-italic">Sản phẩm đã bị xóa</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-center">@item.DonGia.ToString("#,##0")₫</td>
                                    <td class="text-center">x @item.SoLuong</td>
                                    <td class="text-end pe-4 fw-bold">@((item.DonGia * item.SoLuong).ToString("#,##0"))₫</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-light">
                             <tr>
                                <td colspan="3" class="text-end pe-4 pt-3">Tạm tính:</td>
                                <td class="text-end pe-4 pt-3 fw-bold">@tongTienHang.ToString("#,##0")₫</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end pe-4 border-0">Phí vận chuyển:</td>
                                <td class="text-end pe-4 border-0 fw-bold">@((Model.PhiVanChuyen ?? 0).ToString("#,##0"))₫</td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-end pe-4 border-0 fs-5 fw-bold text-danger">TỔNG CỘNG:</td>
                                <td class="text-end pe-4 border-0 fs-4 fw-bold text-danger">
                                    @((tongTienHang + (Model.PhiVanChuyen ?? 0)).ToString("#,##0"))₫
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header @(isFinalized ? "bg-secondary" : "bg-primary") text-white fw-bold py-3">
                <i class="fa-solid fa-cog me-2"></i> Xử lý đơn hàng
            </div>
            <div class="card-body">
                @if (isFinalized)
                {
                    <div class="alert alert-warning text-center">
                        <i class="fa-solid fa-lock me-2"></i>
                        Đơn hàng đã <strong>@(currentStatus == 3 ? "Hoàn thành" : "Hủy")</strong>.<br>
                        Không thể chỉnh sửa trạng thái.
                    </div>
                }
                
                <label class="form-label fw-bold small text-muted">Cập nhật trạng thái:</label>
                
                <select id="statusSelect" class="form-select mb-3" asp-items="ViewBag.Statuses" @@(isFinalized ? "disabled" : "")>
                </select>
                
                <button class="btn @(isFinalized ? "btn-secondary" : "btn-primary") w-100 fw-bold" onclick="updateStatus()" @(isFinalized ? "disabled" : "")>
                    <i class="fa-solid fa-floppy-disk me-2"></i> Cập nhật trạng thái
                </button>
                
                <hr>
                
                <label class="form-label fw-bold small text-muted">Ghi chú nội bộ:</label>
                <textarea class="form-control mb-2 bg-light" rows="3" readonly>@Model.GhiChu</textarea>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white fw-bold py-3">Thông tin giao hàng</div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="small text-muted d-block">Người nhận:</label>
                    <strong class="fs-5">@Model.HoTenNguoiNhan</strong>
                </div>
                <div class="mb-3">
                    <label class="small text-muted d-block">Số điện thoại:</label>
                    <a href="tel:@Model.SdtnguoiNhan" class="text-decoration-none fw-bold">@Model.SdtnguoiNhan</a>
                </div>
                <div class="mb-3">
                    <label class="small text-muted d-block">Địa chỉ:</label>
                    <span>@Model.DiaChiNguoiNhan</span>
                </div>
                <div class="mb-3">
                    <label class="small text-muted d-block">Ngày đặt hàng:</label>
                    <span>@Model.NgayDat?.ToString("dd/MM/yyyy HH:mm:ss")</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var currentStatus = @Model.MaTrangThai ?? 0;
            
            // Set giá trị hiện tại cho dropdown
            $('#statusSelect').val(currentStatus);

            // LOGIC: CHỈ CHO PHÉP CHỌN BƯỚC KẾ TIẾP (QUY TRÌNH CHẶT CHẼ)
            // Nếu đơn đã xong (3) hoặc hủy (-1) thì thôi không cần chạy logic này (vì đã disable cả nút rồi)
            if (currentStatus != 3 && currentStatus != -1) {
                
                $("#statusSelect option").each(function() {
                    var val = parseInt($(this).val());
                    
                    // Mặc định là KHÓA (disabled) hết các option, chỉ mở những cái hợp lệ
                    var allow = false;

                    // Luôn cho phép giữ nguyên trạng thái hiện tại
                    if (val == currentStatus) allow = true;

                    // Luôn cho phép Hủy (-1) dù đang ở đâu (trừ khi đã xong)
                    if (val == -1) allow = true;

                    // --- QUY ĐỊNH CÁC BƯỚC TIẾP THEO ---
                    
                    // Nếu đang là Mới (0) -> Chỉ được sang Đã xác nhận (1)
                    if (currentStatus == 0 && val == 1) allow = true;

                    // Nếu đang là Đã xác nhận (1) -> Chỉ được sang Đang giao (2)
                    if (currentStatus == 1 && val == 2) allow = true;

                    // Nếu đang là Đang giao (2) -> Chỉ được sang Hoàn thành (3)
                    if (currentStatus == 2 && val == 3) allow = true;

                    // --- ÁP DỤNG ---
                    if (!allow) {
                        $(this).prop('disabled', true); // Khóa option không hợp lệ
                        $(this).css('color', '#ccc');   // Làm mờ màu chữ cho dễ nhìn
                    }
                });
            }
        });

        function updateStatus() {
            var newStatus = parseInt($('#statusSelect').val());
            var currentStatus = @Model.MaTrangThai ?? 0;

            // Kiểm tra bảo mật lần cuối trước khi gửi
            if (newStatus != currentStatus && newStatus != -1) {
                // Kiểm tra nhảy cóc
                if (currentStatus == 0 && newStatus != 1) { alert("Phải duyệt đơn trước khi làm việc khác!"); return; }
                if (currentStatus == 1 && newStatus != 2) { alert("Phải chuyển sang giao hàng theo quy trình!"); return; }
                if (currentStatus == 2 && newStatus != 3) { alert("Chỉ có thể hoàn thành đơn hàng!"); return; }
            }

            if(confirm("Bạn có chắc muốn cập nhật trạng thái đơn hàng?")) {
                $.ajax({
                    url: '/admin/donhang/update-status', 
                    type: 'POST',
                    data: { id: @Model.MaHd, status: newStatus },
                    success: function(res) {
                        if(res.success) {
                            alert(res.message);
                            location.reload(); 
                        } else {
                            alert("Lỗi: " + res.message);
                        }
                    },
                    error: function(xhr) {
                        alert("Lỗi kết nối server: " + xhr.status);
                    }
                });
            }
        }
    </script>
}