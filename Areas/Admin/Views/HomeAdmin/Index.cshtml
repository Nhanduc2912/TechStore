@{
    ViewData["Title"] = "Dashboard Quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- HEADER & BỘ LỌC -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold text-dark mb-0">Dashboard Tổng Quan</h3>
        <p class="text-muted small mb-0">Cập nhật lúc: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
    </div>
    <div class="d-flex gap-2">
        <select class="form-select form-select-sm shadow-sm" style="width: 150px;">
            <option value="week">7 ngày qua</option>
            <option value="month">Tháng này</option>
            <option value="year">Năm nay</option>
        </select>
        <button class="btn btn-primary btn-sm shadow-sm"><i class="bi bi-download me-1"></i> Xuất báo cáo</button>
    </div>
</div>

<!-- 1. THỐNG KÊ TỔNG QUAN (STATS CARDS) -->
<div class="row g-4 mb-4">
    <!-- Doanh thu -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">Tổng Doanh Thu</p>
                        <h4 class="fw-bold text-success mb-0">@((ViewBag.DoanhThu ?? 0).ToString("#,##0"))₫</h4>
                        <small class="text-success fw-bold"><i class="bi bi-graph-up-arrow"></i> +12.5%</small> <span class="text-muted small">so với kỳ trước</span>
                    </div>
                    <div class="bg-success bg-opacity-10 p-3 rounded-3">
                        <i class="bi bi-currency-dollar fs-3 text-success"></i>
                    </div>
                </div>
            </div>
            <div class="progress" style="height: 3px;">
                <div class="progress-bar bg-success" role="progressbar" style="width: 75%"></div>
            </div>
        </div>
    </div>

    <!-- Đơn hàng -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">Tổng Đơn Hàng</p>
                        <h4 class="fw-bold text-primary mb-0">@ViewBag.TongDonHang</h4>
                        <small class="text-primary fw-bold"><i class="bi bi-bag-check-fill"></i> +5</small> <span class="text-muted small">đơn mới hôm nay</span>
                    </div>
                    <div class="bg-primary bg-opacity-10 p-3 rounded-3">
                        <i class="bi bi-receipt fs-3 text-primary"></i>
                    </div>
                </div>
            </div>
            <div class="progress" style="height: 3px;">
                <div class="progress-bar bg-primary" role="progressbar" style="width: 55%"></div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">Sản Phẩm</p>
                        <h4 class="fw-bold text-warning mb-0">@ViewBag.TongSanPham</h4>
                        <!-- Hiển thị số lượng sắp hết hàng (Nếu có ViewBag.LowStock) -->
                        @if (ViewBag.LowStock != null)
                        {
                            <small class="text-danger fw-bold"><i class="bi bi-exclamation-circle"></i> @(((List<TechStore.Models.HangHoa>)ViewBag.LowStock).Count)</small> <span class="text-muted small">sắp hết hàng</span>
                        }
                        else
                        {
                            <small class="text-muted small">Kho hàng ổn định</small>
                        }
                    </div>
                    <div class="bg-warning bg-opacity-10 p-3 rounded-3">
                        <i class="bi bi-box-seam fs-3 text-warning"></i>
                    </div>
                </div>
            </div>
            <div class="progress" style="height: 3px;">
                <div class="progress-bar bg-warning" role="progressbar" style="width: 85%"></div>
            </div>
        </div>
    </div>

    <!-- Khách hàng -->
    <div class="col-md-3">
        <div class="card border-0 shadow-sm h-100 overflow-hidden">
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <p class="text-muted small text-uppercase fw-bold mb-1">Khách Hàng</p>
                        <h4 class="fw-bold text-info mb-0">@ViewBag.TongKhachHang</h4>
                        <small class="text-info fw-bold"><i class="bi bi-person-plus-fill"></i> +3</small> <span class="text-muted small">thành viên mới</span>
                    </div>
                    <div class="bg-info bg-opacity-10 p-3 rounded-3">
                        <i class="bi bi-people fs-3 text-info"></i>
                    </div>
                </div>
            </div>
            <div class="progress" style="height: 3px;">
                <div class="progress-bar bg-info" role="progressbar" style="width: 45%"></div>
            </div>
        </div>
    </div>
</div>

<!-- 2. KHU VỰC BIỂU ĐỒ -->
<div class="row mb-4">
    <!-- Line Chart Doanh Thu -->
    <div class="col-lg-8 mb-4 mb-lg-0">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-primary"><i class="bi bi-graph-up me-2"></i>Biểu đồ doanh thu</h6>
                <button class="btn btn-sm btn-light"><i class="bi bi-three-dots"></i></button>
            </div>
            <div class="card-body">
                <canvas id="revenueChart" style="height: 300px; width: 100%;"></canvas>
            </div>
        </div>
    </div>

    <!-- Pie Chart Trạng Thái -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 fw-bold text-dark"><i class="bi bi-pie-chart me-2"></i>Tỉ lệ đơn hàng</h6>
            </div>
            <div class="card-body d-flex justify-content-center align-items-center">
                <canvas id="statusChart" style="max-height: 250px;"></canvas>
            </div>
            <div class="card-footer bg-white border-0 small text-muted text-center pb-3">
                Phân bố trạng thái đơn hàng hiện tại
            </div>
        </div>
    </div>
</div>

<!-- 3. DANH SÁCH & WIDGETS -->
<div class="row">
    <!-- CỘT TRÁI: ĐƠN HÀNG MỚI -->
    <div class="col-lg-8 mb-4">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold text-danger"><i class="bi bi-bell me-2"></i>Đơn hàng cần xử lý (Chờ duyệt)</h6>
                <a href="/Admin/DonHang?status=0" class="text-decoration-none small">Xem tất cả &rarr;</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small">
                        <tr>
                            <th class="ps-4">Mã ĐH</th>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th class="text-end pe-4">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.NewOrders != null)
                        {
                            foreach (var item in ViewBag.NewOrders)
                            {
                                // Tính tổng tiền
                                var total = ((IEnumerable<TechStore.Models.ChiTietHoaDon>)item.ChiTietHoaDons).Sum(c => c.DonGia * c.SoLuong);
                                <tr>
                                    <td class="ps-4 fw-bold">#@item.MaHd</td>
                                    <td>
                                        <div class="fw-bold">@(item.HoTenNguoiNhan ?? item.MaKhNavigation?.HoTen)</div>
                                        <div class="small text-muted">@item.SdtnguoiNhan</div>
                                    </td>
                                    <td>@item.NgayDat?.ToString("dd/MM HH:mm")</td>
                                    <td class="fw-bold text-danger">@total.ToString("#,##0")₫</td>
                                    <td class="text-end pe-4">
                                        <a href="/Admin/DonHang/Detail/@item.MaHd" class="btn btn-sm btn-primary">Xử lý</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="5" class="text-center text-muted small py-3">Không có đơn hàng mới cần xử lý.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- CỘT PHẢI: TOP SẢN PHẨM & KHÁCH HÀNG -->
    <div class="col-lg-4">
        <!-- Top Sản Phẩm -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 fw-bold text-dark"><i class="bi bi-trophy me-2 text-warning"></i>Top Bán Chạy</h6>
            </div>
            <div class="list-group list-group-flush">
                @if (ViewBag.TopProducts != null)
                {
                    foreach (dynamic item in ViewBag.TopProducts)
                    {
                        <div class="list-group-item d-flex align-items-center border-0 px-4 py-2">
                            <img src="~/Hinh/HangHoa/@item.Img" class="rounded me-3 border" width="40" height="40" style="object-fit: cover;" onerror="this.src='https://placehold.co/40'">
                            <div class="flex-grow-1 overflow-hidden">
                                <div class="fw-bold text-dark" title="@item.Name">@item.Name</div>
                                <small class="text-muted">@(((double)item.Revenue).ToString("#,##0"))₫</small>
                            </div>
                            <span class="badge bg-success rounded-pill">@item.Sold</span>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Cảnh báo Kho -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-white py-3 text-danger">
                <h6 class="m-0 fw-bold"><i class="bi bi-exclamation-octagon me-2"></i>Sắp hết hàng</h6>
            </div>
            <div class="list-group list-group-flush">
                @if (ViewBag.LowStock != null)
                {
                    foreach (var item in ViewBag.LowStock)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center border-0 px-4 py-2">
                            <span class="text-dark" style="max-width: 350px;">@item.TenHh</span>
                            <span class="badge bg-danger bg-opacity-10 text-danger border border-danger">Còn @item.SoLuong</span>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Khách hàng mới -->
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white py-3">
                <h6 class="m-0 fw-bold"><i class="bi bi-person-plus me-2"></i>Thành viên mới</h6>
            </div>
            <div class="card-body p-0">
                @if (ViewBag.NewCustomers != null)
                {
                    foreach (var kh in ViewBag.NewCustomers)
                    {
                        <div class="d-flex align-items-center px-4 py-3 border-bottom last-no-border">
                            <div class="bg-light rounded-circle p-2 me-3 text-primary">
                                <i class="bi bi-person-fill fs-5"></i>
                            </div>
                            <div>
                                <div class="fw-bold">@kh.HoTen</div>
                                <div class="small text-muted">@kh.MaTkNavigation?.Email</div>
                            </div>
                            <span class="ms-auto text-muted small">Mới</span>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>

<!-- Chart.js Scripts -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // 1. Biểu đồ Doanh Thu (Line Chart)
    // Lấy dữ liệu JSON từ ViewBag, fallback về mảng rỗng nếu null
    var revLabels = @Html.Raw(ViewBag.RevenueLabels ?? "[]");
    var revData = @Html.Raw(ViewBag.RevenueData ?? "[]");

    if(document.getElementById('revenueChart')) {
        new Chart(document.getElementById('revenueChart'), {
            type: 'line',
            data: {
                labels: revLabels,
                datasets: [{
                    label: 'Doanh thu',
                    data: revData,
                    borderColor: '#435ebe',
                    backgroundColor: 'rgba(67, 94, 190, 0.1)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#fff',
                    pointBorderColor: '#435ebe',
                    pointRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { 
                        beginAtZero: true,
                        grid: { borderDash: [2, 2] },
                        ticks: {
                            callback: function(value) { return value.toLocaleString('vi-VN') + '₫'; }
                        }
                    },
                    x: { grid: { display: false } }
                }
            }
        });
    }

    // 2. Biểu đồ Trạng Thái Đơn (Doughnut Chart)
    var pieDataRaw = @Html.Raw(ViewBag.PieData ?? "[0,0,0,0,0]"); // [Mới, Duyệt, Giao, Xong, Hủy]
    
    if(document.getElementById('statusChart')) {
        new Chart(document.getElementById('statusChart'), {
            type: 'doughnut',
            data: {
                labels: ['Chờ duyệt', 'Đã duyệt', 'Đang giao', 'Hoàn thành', 'Đã hủy'],
                datasets: [{
                    data: pieDataRaw,
                    backgroundColor: [
                        '#ffc107', // Vàng (Mới)
                        '#0dcaf0', // Cyan (Duyệt)
                        '#0d6efd', // Blue (Giao)
                        '#198754', // Green (Xong)
                        '#6c757d'  // Gray (Hủy)
                    ],
                    borderWidth: 0,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom', labels: { usePointStyle: true, padding: 20 } }
                },
                cutout: '70%'
            }
        });
    }
</script>

<style>
    .last-no-border:last-child { border-bottom: none !important; }
    .card { transition: transform 0.2s; }
    .card:hover { transform: translateY(-2px); }
</style>