@model TechStore.Models.HangHoa
@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Cập nhật sản phẩm</h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white fw-bold py-3">Thông tin sản phẩm</div>
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.MaHh" enctype="multipart/form-data">
                    <!-- Input ẩn giữ ID và Tên ảnh cũ -->
                    <input type="hidden" asp-for="MaHh" />
                    <input type="hidden" asp-for="HinhAnh" /> 
                    
                    <!-- Hiển thị thông báo lỗi -->
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Tên sản phẩm -->
                    <div class="mb-3">
                        <label asp-for="TenHh" class="form-label fw-bold">Tên sản phẩm <span class="text-danger">*</span></label>
                        <input asp-for="TenHh" class="form-control" required placeholder="Nhập tên sản phẩm..." />
                        <span asp-validation-for="TenHh" class="text-danger"></span>
                    </div>

                    <!-- Mô tả ngắn -->
                    <div class="mb-3">
                        <label asp-for="MoTaNgan" class="form-label fw-bold">Mô tả ngắn</label>
                        <textarea asp-for="MoTaNgan" class="form-control" rows="3"></textarea>
                    </div>
                    
                    <!-- Chi tiết -->
                    <div class="mb-3">
                        <label asp-for="MoTaChiTiet" class="form-label fw-bold">Bài viết chi tiết (HTML)</label>
                        <textarea asp-for="MoTaChiTiet" class="form-control" rows="5"></textarea>
                    </div>

                    <!-- Giá & Tồn kho -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="GiaNhap" class="form-label fw-bold">Giá nhập</label>
                            <input asp-for="GiaNhap" class="form-control" type="number" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DonGia" class="form-label fw-bold">Giá bán <span class="text-danger">*</span></label>
                            <input asp-for="DonGia" class="form-control" type="number" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="SoLuong" class="form-label fw-bold">Số lượng tồn</label>
                            <input asp-for="SoLuong" class="form-control" type="number" />
                        </div>
                        
                        <!-- Danh mục (Dropdown tự động chọn giá trị cũ) -->
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaDm" class="form-label fw-bold">Danh mục <span class="text-danger">*</span></label>
                            <select asp-for="MaDm" class="form-select" asp-items="ViewBag.Categories" required>
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                        </div>
                    </div>

                    <!-- Thương hiệu -->
                    <div class="mb-3">
                         <label asp-for="MaTh" class="form-label fw-bold">Thương hiệu</label>
                         <select asp-for="MaTh" class="form-select" asp-items="ViewBag.Brands">
                             <option value="">-- Chọn thương hiệu --</option>
                         </select>
                    </div>

                    <!-- Thông số kỹ thuật -->
                    <div class="card bg-light border-0 mb-3">
                        <div class="card-body">
                            <h6 class="card-title fw-bold text-secondary mb-3">Thông số kỹ thuật</h6>
                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <label class="small text-muted">Màu sắc</label>
                                    <input asp-for="MauSac" class="form-control form-control-sm" placeholder="VD: Đen" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label class="small text-muted">RAM</label>
                                    <input asp-for="Ram" class="form-control form-control-sm" placeholder="VD: 16GB" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label class="small text-muted">Bộ nhớ</label>
                                    <input asp-for="BoNho" class="form-control form-control-sm" placeholder="VD: 512GB SSD" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label class="small text-muted">Hệ điều hành</label>
                                    <input asp-for="HeDieuHanh" class="form-control form-control-sm" placeholder="VD: Windows 11" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Upload ảnh mới -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">Thay đổi hình ảnh</label>
                        <input type="file" name="hinhanh" class="form-control" accept="image/*" onchange="previewImage(this)">
                        <small class="text-muted">Bỏ qua nếu không muốn thay đổi ảnh hiện tại.</small>
                    </div>

                    <!-- Nút hành động -->
                    <div class="d-flex gap-2 mt-4 pt-3 border-top">
                        <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save me-2"></i> Lưu thay đổi</button>
                        <a href="/Admin/SanPham" class="btn btn-secondary px-4"><i class="bi bi-x-lg me-2"></i> Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <!-- Cột xem trước ảnh -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm sticky-top" style="top: 80px;">
            <div class="card-header bg-white fw-bold">Hình ảnh hiện tại</div>
            <div class="card-body text-center bg-light">
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <img id="imgPreview" src="~/Hinh/HangHoa/@Model.HinhAnh" class="img-fluid rounded shadow-sm bg-white p-1" style="max-height: 300px;" onerror="this.src='https://placehold.co/300x300?text=Lỗi+Ảnh'">
                    <div class="mt-2 small text-muted">Ảnh hiện tại</div>
                }
                else
                {
                    <img id="imgPreview" src="https://placehold.co/300x300?text=Chưa+có+ảnh" class="img-fluid rounded shadow-sm" style="max-height: 300px;">
                    <div class="mt-2 small text-muted">Chưa có ảnh</div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Script xem trước ảnh khi chọn file mới
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#imgPreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}