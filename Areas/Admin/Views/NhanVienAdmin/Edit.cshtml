@model TechStore.Models.NhanVien
@{
    ViewData["Title"] = "Cập nhật nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var taiKhoan = Model.MaTkNavigation;
}

<div class="page-header">
    <h1><i class="bi bi-pencil-square me-2"></i>Cập nhật nhân viên</h1>
</div>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white fw-bold py-3">Thông tin nhân viên & Tài khoản</div>
            <div class="card-body">
                <form asp-action="Update" asp-route-id="@Model.MaNv" method="post">
                    <input type="hidden" asp-for="MaNv" />
                    
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <!-- 1. THÔNG TIN CÁ NHÂN -->
                    <h6 class="text-muted border-bottom pb-2 mb-3 text-uppercase small fw-bold">Thông tin cá nhân</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="HoTen" class="form-label fw-bold">Họ và tên <span class="text-danger">*</span></label>
                            <input asp-for="HoTen" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NgaySinh" class="form-label fw-bold">Ngày sinh</label>
                            <input type="date" asp-for="NgaySinh" class="form-control" />
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="DiaChi" class="form-label fw-bold">Địa chỉ</label>
                            <input asp-for="DiaChi" class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="NgayVaoLam" class="form-label fw-bold">Ngày vào làm</label>
                            <input type="date" asp-for="NgayVaoLam" class="form-control" />
                        </div>
                    </div>

                    <!-- 2. THÔNG TIN TÀI KHOẢN -->
                    <h6 class="text-muted border-bottom pb-2 mb-3 mt-4 text-uppercase small fw-bold">Tài khoản hệ thống</h6>
                    <div class="row bg-light p-3 rounded mb-3 mx-1">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Tên đăng nhập</label>
                            <input type="text" class="form-control" value="@taiKhoan?.TenDangNhap" readonly disabled />
                            <small class="text-muted">Không thể thay đổi tên đăng nhập.</small>
                        </div>
                         <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Trạng thái hoạt động</label>
                            <div class="form-check form-switch mt-2">
                                <input class="form-check-input" type="checkbox" role="switch" id="TrangThai" name="TrangThai" value="true" @(taiKhoan?.TrangThai == true ? "checked" : "")>
                                <label class="form-check-label" for="TrangThai">Đang hoạt động</label>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Email <span class="text-danger">*</span></label>
                            <input type="email" name="Email" class="form-control" value="@taiKhoan?.Email" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            <input type="text" name="Sdt" class="form-control" value="@taiKhoan?.Sdt" />
                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Đổi mật khẩu (Tùy chọn)</label>
                            <input type="password" name="MatKhauMoi" class="form-control" placeholder="Để trống nếu không muốn đổi mật khẩu" />
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4 pt-3 border-top">
                        <button type="submit" class="btn btn-primary px-4"><i class="bi bi-save me-2"></i> Lưu thay đổi</button>
                        <a href="/Admin/NhanVien" class="btn btn-secondary px-4">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>