@model IEnumerable<TechStore.Models.KhachHang>
@{
    ViewData["Title"] = "Quản lý khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-secondary"><i class="bi bi-people me-2"></i>KHÁCH HÀNG</h3>
    <button class="btn btn-outline-success btn-sm" onclick="alert('Đang phát triển')"><i class="bi bi-download"></i> Xuất Excel</button>
</div>

<div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-md-8">
                <input type="text" name="search" class="form-control" placeholder="Tìm theo tên, email..." value="@ViewBag.Search">
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-search"></i> Tìm kiếm</button>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">ID</th>
                        <th>Họ và tên</th>
                        <th>Thông tin liên hệ</th>
                        <th>Đơn hàng</th>
                        <th>Tổng chi tiêu</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            var tongTien = item.HoaDons?.SelectMany(h => h.ChiTietHoaDons).Sum(c => c.DonGia * c.SoLuong) ?? 0;
                            <tr>
                                <td class="ps-4 text-muted">#@item.MaKh</td>
                                <td class="fw-bold">@item.HoTen</td>
                                <td>
                                    <!-- Lấy thông tin từ bảng TaiKhoan -->
                                    <div class="small"><i class="bi bi-envelope me-1"></i> @(item.MaTkNavigation?.Email ?? "Chưa có Email")</div>
                                    <div class="small"><i class="bi bi-phone me-1"></i> @(item.MaTkNavigation?.Sdt ?? "Chưa có SĐT")</div>
                                </td>
                                <td><span class="badge bg-secondary">@(item.HoaDons?.Count ?? 0)</span></td>
                                <td class="text-success fw-bold">@tongTien.ToString("#,##0")₫</td>
                                <td>
                                    @if (item.MaTkNavigation?.TrangThai == true)
                                    {
                                        <span class="badge bg-success">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Bị khóa</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a href="/Admin/KhachHang/Detail/@item.MaKh" class="btn btn-sm btn-info text-white"><i class="bi bi-eye"></i></a>
                                    @if (item.MaTkNavigation != null)
                                    {
                                        if (item.MaTkNavigation.TrangThai == true)
                                        {
                                            <button class="btn btn-sm btn-outline-danger" onclick="lockUser(@item.MaKh)" title="Khóa"><i class="bi bi-lock"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-sm btn-outline-success" onclick="unlockUser(@item.MaKh)" title="Mở khóa"><i class="bi bi-unlock"></i></button>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="7" class="text-center py-4">Không tìm thấy khách hàng nào.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- Phân trang -->
    @if (ViewBag.TotalPages > 1)
    {
        <div class="card-footer bg-white py-3">
            <ul class="pagination justify-content-center mb-0">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="?page=@i&search=@ViewBag.Search">@i</a>
                    </li>
                }
            </ul>
        </div>
    }
</div>

@section Scripts {
    <script>
        function lockUser(id) {
            if(confirm('Khóa tài khoản này?')) {
                $.post('/Admin/KhachHang/Lock/' + id, function(res){
                    if(res.success) location.reload();
                    else alert(res.message);
                });
            }
        }
        function unlockUser(id) {
             if(confirm('Mở khóa tài khoản này?')) {
                $.post('/Admin/KhachHang/Unlock/' + id, function(res){
                    if(res.success) location.reload();
                    else alert(res.message);
                });
            }
        }
    </script>
}