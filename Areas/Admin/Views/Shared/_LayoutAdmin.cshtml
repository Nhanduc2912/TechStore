<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin TechStore</title>
    
    <!-- SỬ DỤNG CDN ĐỂ ĐẢM BẢO LOAD ĐƯỢC CSS NGAY CẢ KHI THIẾU FILE LOCAL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --sidebar-width: 260px;
            --header-height: 60px;
            --primary-color: #0d6efd;
            --sidebar-bg: #212529;
            --sidebar-color: #fff;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        /* --- SIDEBAR --- */
        #sidebar-wrapper {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: var(--sidebar-bg);
            color: var(--sidebar-color);
            z-index: 1000;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .sidebar-heading {
            height: var(--header-height);
            display: flex;
            align-items: center;
            padding: 0 1.5rem;
            font-size: 1.25rem;
            font-weight: bold;
            color: #fff;
            background-color: rgba(0,0,0,0.1);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .list-group-item {
            background-color: transparent;
            color: rgba(255,255,255,0.75);
            border: none;
            padding: 0.85rem 1.5rem;
            font-weight: 500;
            transition: all 0.2s;
            border-left: 4px solid transparent;
        }

        .list-group-item:hover {
            background-color: rgba(255,255,255,0.05);
            color: #fff;
        }

        .list-group-item.active {
            background-color: rgba(13, 110, 253, 0.15);
            color: #fff;
            border-left-color: var(--primary-color);
        }

        .list-group-item i {
            width: 24px;
            text-align: center;
            margin-right: 10px;
        }

        /* --- MAIN CONTENT --- */
        #page-content-wrapper {
            margin-left: var(--sidebar-width);
            width: calc(100% - var(--sidebar-width));
            transition: all 0.3s ease;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* --- TOPBAR --- */
        .topbar {
            height: var(--header-height);
            background-color: #fff;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.05);
            padding: 0 1.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        /* --- TOGGLED STATE (Khi bấm nút) --- */
        /* Desktop: Ẩn sidebar */
        body.sb-sidenav-toggled #sidebar-wrapper {
            margin-left: calc(-1 * var(--sidebar-width));
        }
        body.sb-sidenav-toggled #page-content-wrapper {
            margin-left: 0;
            width: 100%;
        }

        /* --- MOBILE RESPONSIVE --- */
        @@media (max-width: 768px) {
            /* Mặc định mobile: Ẩn sidebar */
            #sidebar-wrapper {
                margin-left: calc(-1 * var(--sidebar-width));
            }
            #page-content-wrapper {
                margin-left: 0;
                width: 100%;
            }

            /* Khi bật toggle trên mobile: Hiện sidebar + Overlay */
            body.sb-sidenav-toggled #sidebar-wrapper {
                margin-left: 0;
            }
            
            /* Overlay đen làm mờ nền khi mở menu */
            body.sb-sidenav-toggled #page-content-wrapper::before {
                content: "";
                position: fixed;
                top: 0; left: 0; right: 0; bottom: 0;
                background: rgba(0,0,0,0.5);
                z-index: 998;
                display: block;
            }
        }
    </style>
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- SIDEBAR -->
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="bi bi-shield-lock-fill text-primary me-2"></i> ADMIN
            </div>
            <div class="list-group list-group-flush flex-grow-1 my-3">
                <!-- Dashboard -->
                <a href="/Admin/HomeAdmin" class="list-group-item list-group-item-action">
                    <i class="bi bi-speedometer2"></i> Tổng quan
                </a>

                <div class="text-uppercase small fw-bold px-3 mt-4 mb-2" style="font-size: 0.75rem;">Quản lý</div>
                
                <a href="/Admin/DonHang" class="list-group-item list-group-item-action">
                    <i class="bi bi-receipt"></i> Đơn hàng
                </a>
                <a href="/Admin/SanPham" class="list-group-item list-group-item-action">
                    <i class="bi bi-box-seam"></i> Sản phẩm
                </a>
                <a href="/Admin/DanhMuc" class="list-group-item list-group-item-action">
                    <i class="bi bi-tags"></i> Danh mục
                </a>
                <a href="/Admin/KhachHang" class="list-group-item list-group-item-action">
                    <i class="bi bi-people"></i> Khách hàng
                </a>

                <div class="text-uppercase small fw-bold px-3 mt-4 mb-2" style="font-size: 0.75rem;">Thống kê</div>
                
                <a href="/Admin/ThongKe" class="list-group-item list-group-item-action">
                    <i class="bi bi-graph-up"></i> Báo cáo
                </a>

                <!-- Bottom Links -->
                <div class="mt-auto border-top border-secondary pt-2 pb-3">
                    <a href="/" target="_blank" class="list-group-item list-group-item-action text-info">
                        <i class="bi bi-globe"></i> Xem Website
                    </a>
                    <a href="/KhachHang/DangXuat" class="list-group-item list-group-item-action text-danger">
                        <i class="bi bi-box-arrow-left"></i> Đăng xuất
                    </a>
                </div>
            </div>
        </div>

        <!-- PAGE CONTENT -->
        <div id="page-content-wrapper">
            <!-- TOPBAR -->
            <nav class="topbar">
                <button class="btn btn-light border shadow-sm" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>

                <div class="dropdown">
                    <a href="#" class="d-flex align-items-center text-decoration-none text-dark dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        <div class="text-end me-2 d-none d-sm-block">
                            <div class="fw-bold small">@(User?.Identity?.Name ?? "Admin")</div>
                            <div class="text-muted" style="font-size: 0.7rem;">Super Admin</div>
                        </div>
                        <img src="https://ui-avatars.com/api/?name=Admin&background=0D6EFD&color=fff" alt="Avatar" width="36" height="36" class="rounded-circle border">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                        <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Cài đặt</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" href="/KhachHang/DangXuat"><i class="bi bi-box-arrow-left me-2"></i>Đăng xuất</a></li>
                    </ul>
                </div>
            </nav>

            <!-- MAIN CONTENT CONTAINER -->
            <div class="container-fluid p-4">
                <!-- Alerts -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm border-start border-success border-4" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show shadow-sm border-start border-danger border-4" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <!-- Body -->
                @RenderBody()
            </div>

            <footer class="bg-white text-center py-3 text-muted small border-top mt-auto">
                &copy; 2025 TechStore Admin Panel
            </footer>
        </div>
    </div>

    <!-- SCRIPTS (Sử dụng CDN) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // 1. Toggle Sidebar Logic
        const sidebarToggle = document.body.querySelector('#sidebarToggle');
        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', event => {
                event.preventDefault();
                document.body.classList.toggle('sb-sidenav-toggled');
                localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
            });
        }

        // 2. Auto Active Menu
        $(document).ready(function() {
            const path = location.pathname.toLowerCase();
            $('.list-group-item').each(function() {
                const href = $(this).attr('href')?.toLowerCase();
                // Active chính xác
                if (href && path.includes(href) && href !== '/') {
                    $(this).addClass('active');
                }
                // Active Dashboard mặc định
                if ((path === '/admin' || path === '/admin/') && href === '/Admin/HomeAdmin') {
                    $(this).addClass('active');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>