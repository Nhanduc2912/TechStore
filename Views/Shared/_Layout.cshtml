<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechStore PC Gaming</title>
    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Icons Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Banner nhỏ (Option) -->
        <div class="bg-dark text-white text-center py-1 small">
            <span class="me-3"><i class="bi bi-truck"></i> Giao hàng toàn quốc</span>
            <span><i class="bi bi-shield-check"></i> Bảo hành chính hãng 100%</span>
        </div>

        <!-- Main Header (Màu đỏ GearVN) -->
        <partial name="_Header" />

        <!-- Navigation Menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-0">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <!-- Tìm đoạn code <ul class="navbar-nav...> và thay thế nội dung bên trong -->
                    <ul class="navbar-nav fw-bold text-uppercase mx-auto">
                        <li class="nav-item">
                            <a class="nav-link py-3 px-4 active" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-1"></i> Trang chủ
                            </a>
                        </li>
    
                    <!-- Laptop Gaming (ID = 3) -->
                        <li class="nav-item">
                            <a class="nav-link py-3 px-4" asp-controller="HangHoa" asp-action="Index" asp-route-loai="1">
                                <i class="bi bi-laptop me-1"></i> Laptop Gaming
                            </a>
                        </li>
    
                    <!-- PC Đồ Họa (Tạm dẫn về trang tất cả sản phẩm hoặc ID danh mục PC nếu có) -->
                        <li class="nav-item">
                            <a class="nav-link py-3 px-4" asp-controller="HangHoa" asp-action="Index">
                                <i class="bi bi-pc-display me-1"></i> PC Đồ Họa
                            </a>
                        </li>
    
                    <!-- Linh Kiện PC -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle py-3 px-4" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-cpu me-1"></i> Linh Kiện PC
                            </a>
                            <ul class="dropdown-menu shadow border-0" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-controller="HangHoa" asp-action="Index" asp-route-loai="2">CPU - Vi xử lý</a></li>
                                <li><a class="dropdown-item" asp-controller="HangHoa" asp-action="Index" asp-route-loai="3">VGA - Card màn hình</a></li>
                                <li><a class="dropdown-item" asp-controller="HangHoa" asp-action="Index" asp-route-loai="4">Mainboard - Bo mạch chủ</a></li>
                                <li><a class="dropdown-item" asp-controller="HangHoa" asp-action="Index" asp-route-loai="6">RAM & Ổ cứng</a></li>
                            </ul>
                        </li>
    
                    <!-- Màn hình (ID = 7) -->
                        <li class="nav-item">
                            <a class="nav-link py-3 px-4" asp-controller="HangHoa" asp-action="Index" asp-route-loai="5">
                                <i class="bi bi-display me-1"></i> Màn hình
                            </a>
                        </li>
    
                        <li class="nav-item">
                            <a class="nav-link py-3 px-4 text-danger" href="#">
                                <i class="bi bi-gift-fill me-1"></i> Khuyến Mãi
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-light pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h5 class="text-uppercase fw-bold text-danger mb-3">Về TechStore</h5>
                    <p class="small text-secondary">Hệ thống bán lẻ Laptop, PC Gaming, Linh kiện máy tính chính hãng hàng đầu Việt Nam.</p>
                </div>
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Chính sách</h5>
                    <ul class="list-unstyled small text-secondary">
                        <li class="mb-2"><a href="#" class="text-decoration-none text-secondary">Chính sách bảo hành</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-secondary">Chính sách đổi trả</a></li>
                        <li class="mb-2"><a href="#" class="text-decoration-none text-secondary">Chính sách giao hàng</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Thanh toán</h5>
                    <div class="d-flex gap-2">
                        <i class="bi bi-credit-card fs-3 text-secondary"></i>
                        <i class="bi bi-qr-code fs-3 text-secondary"></i>
                        <i class="bi bi-cash-coin fs-3 text-secondary"></i>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h5 class="fw-bold mb-3">Kết nối</h5>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-white fs-4"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-youtube"></i></a>
                        <a href="#" class="text-white fs-4"><i class="bi bi-tiktok"></i></a>
                    </div>
                </div>
            </div>
            <hr class="border-secondary" />
            <div class="text-center small text-secondary">
                &copy; 2025 - TechStore Gaming - Assignment C# 3
            </div>
        </div>
    </footer>
    <partial name="_LoginModal" />


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>