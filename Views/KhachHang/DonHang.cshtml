@model IEnumerable<TechStore.Models.HoaDon>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold text-uppercase text-danger"><i class="fa fa-history me-2"></i>Lịch sử đơn hàng</h3>
        <a href="/" class="btn btn-outline-secondary rounded-pill">
            <i class="fa fa-arrow-left me-2"></i>Tiếp tục mua sắm
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fa fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fa fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary">
                        <tr>
                            <th class="py-3 ps-4">Mã đơn</th>
                            <th>Ngày đặt</th>
                            <th style="min-width: 250px;">Sản phẩm</th> <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            // 1. Tính tổng tiền an toàn (xử lý null)
                            double tongTien = item.ChiTietHoaDons?.Sum(c => c.DonGia * c.SoLuong) ?? 0;
                            
                            // 2. Xử lý trạng thái (null -> 0)
                            int trangThai = item.MaTrangThai ?? 0;

                            <tr>
                                <td class="ps-4 fw-bold text-primary">#@item.MaHd</td>
                                
                                <td>@(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("dd/MM/yyyy HH:mm") : "---")</td>
                                
                                <td>
                                    @if(item.ChiTietHoaDons != null && item.ChiTietHoaDons.Any())
                                    {
                                        var firstItem = item.ChiTietHoaDons.First();
                                        if (firstItem.MaHhNavigation != null)
                                        {
                                            <div class="d-flex align-items-center">
                                                <img src="~/Hinh/HangHoa/@firstItem.MaHhNavigation.HinhAnh" 
                                                     class="rounded border me-2" 
                                                     style="width: 40px; height: 40px; object-fit: cover;"
                                                     onerror="this.src='https://placehold.co/40x40?text=No+Img'">
                                                
                                                <div class="small">
                                                    <div class="fw-bold text-truncate" style="max-width: 180px;">@firstItem.MaHhNavigation.TenHh</div>
                                                    @if(item.ChiTietHoaDons.Count > 1)
                                                    {
                                                        <span class="text-muted fst-italic" style="font-size: 0.85em;">và @(item.ChiTietHoaDons.Count - 1) sản phẩm khác...</span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                </td>
                                
                                <td class="fw-bold text-danger">@tongTien.ToString("#,##0")₫</td>
                                
                                <td>
                                    @{
                                        string badgeClass = "";
                                        string statusText = item.MaTrangThaiNavigation?.TenTrangThai ?? "Chờ xử lý";

                                        switch (trangThai)
                                        {
                                            case 0: badgeClass = "bg-warning text-dark"; statusText = "Mới đặt"; break;
                                            case 1: badgeClass = "bg-info text-dark"; statusText = "Đã xác nhận"; break;
                                            case 2: badgeClass = "bg-primary"; statusText = "Đang giao"; break;
                                            case 3: badgeClass = "bg-success"; statusText = "Hoàn thành"; break;
                                            case -1: badgeClass = "bg-danger"; statusText = "Đã hủy"; break;
                                            default: badgeClass = "bg-secondary"; break;
                                        }
                                    }
                                    <span class="badge @badgeClass rounded-pill px-3 py-2">@statusText</span>
                                </td>
                                
                                <td class="text-end pe-4 align-middle">
                                    <div class="d-flex justify-content-end gap-2">
        
                                        <a asp-action="ChiTietDonHang" asp-route-id="@item.MaHd" 
                                            class="btn btn-sm btn-outline-primary d-inline-flex align-items-center" 
                                            title="Xem chi tiết">
                                            <i class="fa fa-eye me-1"></i> <span>Xem</span>
                                        </a>

                                    @if(trangThai == 0 || trangThai == 1)
                                    {
                                        <a asp-action="HuyDonHang" asp-route-id="@item.MaHd" 
                                        class="btn btn-sm btn-outline-danger d-inline-flex align-items-center" 
                                        onclick="return confirm('Bạn có chắc chắn muốn hủy đơn hàng #@item.MaHd không?');" 
                                        title="Hủy đơn hàng">
                                        <i class="fa fa-times me-1"></i> <span>Hủy</span>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-white rounded shadow-sm">
            <i class="fa fa-box-open text-muted mb-3" style="font-size: 4rem; opacity: 0.3;"></i>
            <h5 class="text-muted">Bạn chưa có đơn hàng nào</h5>
            <p class="text-muted mb-4">Hãy dạo một vòng cửa hàng để chọn món đồ ưng ý nhé!</p>
            <a href="/" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">Mua sắm ngay</a>
        </div>
    }
</div>