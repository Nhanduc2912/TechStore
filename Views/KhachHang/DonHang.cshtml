@model IEnumerable<TechStore.Models.HoaDon>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container py-5">
    <h3 class="fw-bold mb-4 text-uppercase">Lịch sử đơn hàng</h3>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0 bg-white">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="py-3 ps-4">Mã đơn</th>
                        <th>Ngày đặt</th>
                        <th>Sản phẩm</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">#@item.MaHd</td> <!-- Đã sửa MaHD -> MaHd -->
                            <!-- FIX: Dùng ?.ToString() và check null cho NgayDat -->
                            <td>@(item.NgayDat.HasValue ? item.NgayDat.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa cập nhật")</td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if(item.ChiTietHoaDons != null && item.ChiTietHoaDons.Any())
                                    {
                                        var firstItem = item.ChiTietHoaDons.First();
                                        // FIX: Kiểm tra null cho MaHhNavigation
                                        if (firstItem.MaHhNavigation != null)
                                        {
                                            <img src="~/Hinh/HangHoa/@firstItem.MaHhNavigation.HinhAnh" 
                                                 style="width: 40px; height: 40px; object-fit: cover;" class="rounded border"
                                                 onerror="this.src='https://placehold.co/50x50'">
                                            
                                            <div class="small">
                                                <span class="d-block fw-bold text-truncate" style="max-width: 200px;">
                                                    @firstItem.MaHhNavigation.TenHh
                                                </span>
                                                @if(item.ChiTietHoaDons.Count > 1)
                                                {
                                                    <span class="text-muted fst-italic">và @(item.ChiTietHoaDons.Count - 1) sản phẩm khác...</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sản phẩm không tồn tại</span>
                                        }
                                    }
                                </div>
                            </td>
                            <td class="fw-bold text-danger">
                                @{
                                    // FIX: Tính tổng tiền an toàn với null check
                                    var tongTien = item.ChiTietHoaDons?.Sum(c => c.DonGia * c.SoLuong) ?? 0;
                                }
                                @tongTien.ToString("#,##0")₫
                            </td>
                            <td>
                                <!-- FIX: Kiểm tra null cho MaTrangThaiNavigation -->
                                @{
                                    var tenTrangThai = item.MaTrangThaiNavigation?.TenTrangThai ?? "Không xác định";
                                    var badgeClass = item.MaTrangThai switch {
                                        0 => "bg-warning text-dark",
                                        1 or 2 => "bg-info",
                                        3 => "bg-success",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@tenTrangThai</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5 bg-white rounded shadow-sm">
            <i class="bi bi-box-seam text-muted" style="font-size: 3rem;"></i>
            <p class="mt-3 text-muted">Bạn chưa có đơn hàng nào.</p>
            <a href="/" class="btn btn-danger bg-gearvn">Mua sắm ngay</a>
        </div>
    }
</div>