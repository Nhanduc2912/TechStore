@model List<TechStore.ViewModels.CartItem>
@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-5">
    
    <!-- HIỂN THỊ LỖI TỪ CONTROLLER -->
    @if (TempData["Loi"] != null)
    {
        <div class="alert alert-danger mb-4 shadow-sm fw-bold border-danger d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
            <div>@TempData["Loi"]</div>
        </div>
    }

    <div class="row">
        <!-- CỘT TRÁI: THÔNG TIN XÁC NHẬN -->
        <div class="col-md-7">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold text-uppercase mb-0 text-primary">
                        <i class="bi bi-geo-alt-fill me-2"></i>Địa chỉ nhận hàng
                    </h5>
                    <a href="/KhachHang/Profile" class="btn btn-sm btn-outline-primary fw-bold">
                        <i class="bi bi-pencil-square"></i> Thay đổi
                    </a>
                </div>
                <div class="card-body">
                    <!-- Card hiển thị địa chỉ có sẵn từ Database -->
                    <div class="p-3 rounded border border-primary bg-primary bg-opacity-10 position-relative mt-2">
                        <div class="d-flex align-items-center mb-2">
                            <span class="fw-bold fs-5 me-3">@ViewBag.NguoiNhan</span>
                            <span class="text-muted">|</span>
                            <span class="ms-3 fw-bold">@ViewBag.DienThoai</span>
                        </div>
                        <div class="text-secondary mb-1">
                            <i class="bi bi-envelope me-2"></i> @ViewBag.Email
                        </div>
                        <div class="text-dark fw-bold">
                            <i class="bi bi-house-door me-2"></i> @(ViewBag.DiaChi ?? "Chưa cập nhật địa chỉ")
                        </div>
                        <span class="position-absolute top-0 end-0 badge bg-primary m-2">Mặc định</span>
                    </div>

                    <!-- FORM XÁC NHẬN ĐƠN HÀNG -->
                    <form asp-action="Checkout" method="post" class="mt-4">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Ghi chú cho đơn hàng (Tùy chọn)</label>
                            <textarea class="form-control" name="GhiChu" rows="2" placeholder="Ví dụ: Giao hàng giờ hành chính, gọi trước khi giao..."></textarea>
                        </div>

                        <h5 class="fw-bold mb-3 mt-4 text-primary"><i class="bi bi-credit-card-2-front me-2"></i>Phương thức thanh toán</h5>
                        <div class="border rounded p-3 bg-light">
                            <div class="form-check mb-2">
                                <input id="cod" name="paymentMethod" type="radio" class="form-check-input" value="COD" checked>
                                <label class="form-check-label fw-bold cursor-pointer" for="cod">
                                    <i class="bi bi-cash-stack me-2 text-success"></i>Thanh toán khi nhận hàng (COD)
                                </label>
                                <div class="small text-muted ms-4">Thanh toán bằng tiền mặt cho shipper khi nhận hàng.</div>
                            </div>
                            <hr>
                            <div class="form-check">
                                <input id="banking" name="paymentMethod" type="radio" class="form-check-input" value="Banking">
                                <label class="form-check-label fw-bold cursor-pointer" for="banking">
                                    <i class="bi bi-qr-code me-2 text-primary"></i>Chuyển khoản ngân hàng (QR Code)
                                </label>
                                <div class="small text-muted ms-4">Quét mã VietQR để thanh toán nhanh chóng, chính xác.</div>
                            </div>
                        </div>

                        <button class="btn btn-danger bg-gearvn btn-lg w-100 fw-bold py-3 mt-4 shadow transition-btn" type="submit">
                            <i class="bi bi-check-circle-fill me-2"></i> XÁC NHẬN ĐẶT HÀNG
                        </button>
                        
                        <div class="text-center mt-3">
                            <span class="text-muted small">Bằng việc đặt hàng, bạn đồng ý với <a href="#" class="text-decoration-none">Điều khoản sử dụng</a> của TechStore.</span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- CỘT PHẢI: TÓM TẮT ĐƠN HÀNG -->
        <div class="col-md-5 order-md-last mt-4 mt-md-0">
            <div class="card border-0 shadow-sm bg-white sticky-top" style="top: 100px;">
                <div class="card-header bg-light border-bottom-0 py-3">
                    <h5 class="fw-bold mb-0 text-dark"><i class="bi bi-cart-check me-2"></i>Đơn hàng của bạn <span class="badge bg-danger rounded-pill float-end">@Model.Sum(p => p.SoLuong)</span></h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach(var item in Model)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-4 py-3">
                                <div class="d-flex gap-3 align-items-center">
                                    <div class="position-relative">
                                         <img src="~/Hinh/HangHoa/@item.HinhAnh" class="img-fluid border rounded" style="width: 60px; height: 60px; object-fit: contain;" onerror="this.src='https://placehold.co/100x100'">
                                         <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-secondary">@item.SoLuong</span>
                                    </div>
                                    <div style="max-width: 180px;">
                                        <h6 class="my-0 small fw-bold text-truncate" title="@item.TenHh">@item.TenHh</h6>
                                        <small class="text-muted d-block">Đơn giá: @item.DonGia.ToString("#,##0")₫</small>
                                    </div>
                                </div>
                                <span class="fw-bold text-dark">@item.ThanhTien.ToString("#,##0")₫</span>
                            </li>
                        }
                        
                        <li class="list-group-item bg-light px-4 py-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Tạm tính</span>
                                <span class="fw-bold">@Model.Sum(p => p.ThanhTien).ToString("#,##0")₫</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Phí vận chuyển</span>
                                <span class="text-success fw-bold">30,000₫</span>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold fs-5">Tổng cộng</span>
                                <strong class="text-danger fs-4">@((Model.Sum(p => p.ThanhTien) + 30000).ToString("#,##0"))₫</strong>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="card-footer bg-white border-top-0 pb-3 text-center">
                    <small class="text-muted"><i class="bi bi-shield-lock-fill text-success"></i> Thông tin thanh toán được bảo mật tuyệt đối (SSL)</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .cursor-pointer { cursor: pointer; }
    .transition-btn:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(220, 53, 69, 0.4) !important; }
</style>